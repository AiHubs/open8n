{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"types": ["node"],
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"baseUrl": "src",
		"paths": {
			"~/*": ["./*"]
		},
		// TODO: remove all options below this line
		"strict": false,
		"noUnusedLocals": false,
		"useUnknownInCatchVariables": false
	},
	"include": ["src/**/*.ts"],
	"exclude": ["test/**"]
}
