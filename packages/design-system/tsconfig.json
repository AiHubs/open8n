{
	"extends": "@n8n/frontend-typescript-config",
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": ".",
		"outDir": "dist",
		"types": ["vite/client", "vitest/globals"],
		"typeRoots": [
			"./node_modules/@testing-library",
			"./node_modules/@types",
			"../../node_modules",
			"../../node_modules/@types"
		],
		"paths": {
			"n8n-design-system*": ["./src*"],
			"@n8n/frontend-composables*": ["../frontend/@n8n/composables/src*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.vue"]
}
